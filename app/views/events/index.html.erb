<%= link_to 'Create Event', new_event_path %>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path) %>  
  </li>
<% end %>

<h2>Upcoming Events</h2>
<h3>(click a location to view the event show page)</h3>
<% upcoming.each do |event|%>
	<p>
		<strong>Location:</strong> <%= link_to event.location, event_path(event) %><br/> 
		<strong>Event Date:</strong> <%= event.event_date %><br/> 
		<strong>Hosted <em>by:</em></strong> <%= link_to event.creator.username, user_path(event.creator_id) %>
	</p>
<% end %>


